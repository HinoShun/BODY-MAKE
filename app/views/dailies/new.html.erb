<div class="main-center">
  <h2>データ入力</h2>
</div>

<div class="main-center">

  <div class="form">
    <%= form_with model: @daily, url: dailies_path, id: 'new_post', local: true do |f| %>

      <div class="field">
        <label class="label-text"></label>
        <%= f.date_field :input_day, placeholder:"日付", class: :input_field %>
      </div>

      <div class="field">
        <label class="label-text"></label>
        <%= f.number_field :weight, step: "0.1", placeholder:"体重", class: :input_field %>
      </div>

      <div class="field">
        <label class="label-text"></label>
        <%= f.number_field :fat, step: "0.1", placeholder:"体脂肪率", class: :input_field %>
      </div>

      <div class="field">
        <div class="user-image-register", id = "previews" ></div>
        <%= f.file_field :image, placeholder: "画像" %>
      </div>

      

      <div class="actions">
        <%= f.submit "入力",class:"action-btn" %>
      </div>

    <% end %>

  </div>

</div>

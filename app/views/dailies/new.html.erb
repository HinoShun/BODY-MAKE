<div class="main-center">
  <h2>データ入力</h2>
</div>

<div class="main-center">

  <div class="form">
    <%= form_with model: @daily, url: dailies_path, id: 'new_post', local: true do |f| %>

      <div class="field">
        <label class="label-text"></label>
        <%= f.date_field :input_day, placeholder:"日付", class: :input_field %>
      </div>

      <div class="field">
        <label class="label-text"></label>
        <%= f.text_field :weight, placeholder:"体重", class: :input_field %>
      </div>

      <div class="field">
        <label class="label-text"></label>
        <%= f.text_field :fat, placeholder:"体脂肪率", class: :input_field %>
      </div>

      <div class="field">
        <div class="user-image-register", id = "previews" ></div>
        <%= f.file_field :image, placeholder: "画像" %>
      </div>

      

      <div class="actions">
        <%= f.submit "入力",class:"action-btn" %>
      </div>

    <% end %>

    <div class="under_bar"></div>

  </div>



</div>


<div class="main-center">
  <div class="main-center">


    <div class="body_image", id="">
      <div class="body_before">
        <%= image_tag(@before_image.image, class: :tweet_image) %>
        <%= @before_image.input_day %>
      </div>
      <div class="body_after">
        <%= image_tag(@after_image.image, class: :tweet_image) %>
        <%= @after_image.input_day %>
      </div>
    </div>



  <div class="chart", id="">
    <%= line_chart [
      { 
        name: "体重",
        data: @dailies.map { |record| record.slice(:input_day, :weight).values }
      }
      ], min: 0, max: 100 %>
  </div>

  <div class="chart", id="">
    <%= line_chart [
      { 
        name: "体脂肪率",
        data: @dailies.map { |record| record.slice(:input_day, :fat).values }
      }
      ], min: 0, max: 50 %>
  </div>



    <%= render partial: "dailies", collection: @dailies %>
    

  </div>
  </div>


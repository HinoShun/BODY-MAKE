          <%= @carbo_g.round %><p class="deco_text">g</p>
        </div>
        <div class="calorie-data">
          <%= @carbo_c.round %><p class="deco_text">kcal</p>
        </div>
      </div>
    </div>

    <div class="calorie-data-wrap">
      <div class="calorie-data-text">
        脂質（kcal）
      </div>
      <div class="calorie-data-wrap_macro">
        <div class="calorie-data">
          <%= @lipid_g.round %><p class="deco_text">g</p>
        </div>
        <div class="calorie-data">
          <%= @lipid_c.round %><p class="deco_text">kcal</p>
        </div>
      </div>
    </div>

  </div>


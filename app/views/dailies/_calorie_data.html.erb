  <div class="calorie-data-main-wrap">

    <div class ="calorie-data-title">
      あなたの消費カロリーと摂取カロリー
    </div>

    <div class="calorie-data-wrap">
      <div class="calorie-data-text">
        基礎代謝
      </div>
      <div class="calorie-data">
        <%= @basal_metabolism.round %><p class="deco_text">kcal</p>
      </div>
    </div>

    <div class="calorie-data-wrap">
      <div class="calorie-data-text">
        消費カロリー/1日
      </div>
      <div class="calorie-data">
        <%= @calories_burned.round %><p class="deco_text">kcal</p>
      </div>
    </div>

    <div class="calorie-data-wrap">
      <div class="calorie-data-text">
        1日のカロリー収支
      </div>
      <div class="calorie-data">
        <%= @diff_calorie.round %><p class="deco_text">kcal</p>
      </div>
    </div>

    <div class="calorie-data-wrap">
      <div class="calorie-data-text">
        目標摂取カロリー
      </div>
      <div class="calorie-data">
        <%= @calorie_intake.round %><p class="deco_text">kcal</p>
      </div>
    </div>

    <div class ="calorie-data-title">
      マクロ栄養素のご提案
    </div>

    <div class="calorie-data-wrap">
      <div class="calorie-data-text">
        タンパク質
      </div>
      <div class="calorie-data-wrap_macro">
        <div class="calorie-data">
          <%= @protein_g.round %><p class="deco_text">g</p>
        </div>
        <div class="calorie-data">
          <%= @protein_c.round %><p class="deco_text">kcal</p>

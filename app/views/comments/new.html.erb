<div class="main-center">
  <h2>コメントする</h2>
</div>

<div class="main-center">

  <div class="form">
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>

      <div class="field">
        <label class="label-text"></label>
        <%= f.text_area :comment, placeholder:"最大255文字", class: :tweet_input_field %>
      </div>

      <div class="actions">
        <%= f.submit "コメントする",class:"action-btn" %>
      </div>

    <% end %>

  </div>

</div>
<div class="main_center">
  <h2>つぶやく</h2>
</div>

<div class="main_center">

  <div class="form">
    <%= form_with model: @tweet, url: tweets_path, local: true do |f| %>

      <div class="field">
        <label class="label-text"></label>
        <%= f.text_field :tweet, placeholder:"", class: :input_field %>
      </div>

      <div class="actions">
        <%= f.submit "つぶやく",class:"action-btn" %>
      </div>

    <% end %>
  </div>
</div>